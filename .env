# REACT_APP_API_URL=http://localhost:5000
# REACT_APP_API_URL=http://127.0.0.1:5000
# REACT_APP_API_URL=http://85.198.83.197:5000
# Оставляем вашу существующую переменную API
REACT_APP_API_URL=/api

# ========== HMR / WebSocket ==========
# Переводим dev‑сервер в HTTPS-режим
HTTPS=true

# Явно указываем, к какому хосту будет подключаться WebSocket‑клиент
WDS_SOCKET_HOST=fit-demo.ru

# Порт для WSS — 443, а не 3000
WDS_SOCKET_PORT=443

# Путь для WS‑эндпоинта — должен совпадать с тем, что проксируется в nginx
WDS_SOCKET_PATH=/ws

